<div class="post-list-item">
  <h2><%= post.title %></h2>
  <%= render partial: 'posts/meta', locals: { post: post } %>
  <%= image_tag post.hero_image.url(:small) %>
  <p>
    <%= truncate_html post.body, length: 500 %>
  </p>
  <p>
    <a class="more" href="/posts/<%= post.slug %>">
      Read Post
    </a>
  </p>
</div>
